<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h2 class="title is-2">Sign Up</h2>
        <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          wrapper: false,
                          input_html: { class: "input" }
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :last_name,
                          required: true,
                          wrapper: false,
                          input_html: { class: "input" }
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :username,
                          required: true,
                          wrapper: false,
                          input_html: { class: "input" }
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: true,
                          wrapper: false,
                          input_html: { class: "input" }
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: true,
                          hint: (minimum_chars_hint(@minimum_password_length)),
                          wrapper: false,
                          input_html: { class: "input" }
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                          required: true,
                          wrapper: false,
                          input_html: { class: "input" }
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Sign up", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
