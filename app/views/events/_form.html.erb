<h1 class="title is-3 has-text-centered">Create an Event</h1>
<article class="media box">
  <div class="media-content">
    <%= simple_form_for(@event) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="field">
        <div class="control">
          <%= f.input :event_name,
                      required: true,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label" },
                      autofocus: true
          %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :event_location,
                      required: true,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label" }
          %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label "Event date", class: "has-text-black has-text-weight-bold" %>
          <%= f.datetime_select :event_date,
                      required: true,
                      label: "Event date",
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label" }
          %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :description,
                      required: true,
                      input_html: { class: "textarea" },
                      labe: "Write details about your event here...",
                      wrapper: false,
                      label_html: { class: "label" }
          %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Create Event", class: "button is-primary" %>
      </div>
    <% end %>
  <div>
</article>
