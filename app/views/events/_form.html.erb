
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :event_name,
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label" },
                  autofocus: true
      %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :event_location,
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label" }
      %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :event_date,
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label" }
      %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description,
                  input_html: { class: "textarea" },
                  labe: "Write details about your event here...",
                  wrapper: false,
                  label_html: { class: "label" }
      %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
